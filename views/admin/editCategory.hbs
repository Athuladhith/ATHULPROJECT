<!DOCTYPE html>
<html>

<head>
  <title>Edit Category</title>
  {{!-- <link rel="stylesheet" type="text/css" href="/css/editcategory.css"> --}}
  <link rel="stylesheet" href="/stylesheets/editcategory.css">

  <style>
 body {
      margin: 0;
      padding: 0;
      background-color: #f8f9fa; /* Optional: Set a background color */
    }

    .navbar {
      position: fixed;
      z-index: 1000;
      top: 0;
      width: 100%;
      height: 60px; /* Adjust the height as needed */
      background-color: #d39292;
      color: #fff;
      font-size: 1.6rem;
      padding: 20px 30px;
    }

    .form-container {
      position: absolute;
      top: 60px; /* Adjust the top position to match the navbar height */
      left: 50%;
      transform: translate(-50%, 0);
      max-width: 400px;
      width: 100%;
      padding: 20px;
      background-color: #ffffff;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      z-index: 999;
    }

    .navbar a {
      color: #f1eded;
      text-decoration: none;
    }

    .navbar a:hover {
      color: #fff;
      text-decoration: underline;
    }
    .form-field {
      margin-bottom: 20px;
    }

    .submit-button {
      background-color: #007bff;
      color: #ffffff;
      border: none;
      padding: 10px 20px;
      border-radius: 4px;
      cursor: pointer;
    }

    .image-preview {
      margin-top: 10px;
      max-width: 100%;
      height: auto;
    }

    </style>
</head>



<body>
  <div class="form-container">
    <h1 class="text-center">Edit Category</h1>
    <form action="" method="post" enctype="multipart/form-data">


    

      <div class="form-field">
        <label for="name">Name:</label>
        <input type="text" id="name" value="{{category.name }}" required name="name" class="form-control">
      </div>

      <div class="form-field">
        <label for="image">Image:</label>
        <img src="/uploads/{{category.image}}" alt="{{@index}}" width="100px" height="100px" class="img-thumbnail">
      </div>

      <div class="form-field">
        <label for="image">Choose New Image:</label>
        <input type="file" id="image" name="image" value={{category.image }} accept="image/*" onchange="previewImage(event)" class="form-control">
        <div class="image-preview"></div>
      </div>

      <div>
        <p style="color: rgb(183, 6, 6);">
          {{message}}
        </p>
      </div>

      <button class="submit-button" type="submit">Submit</button>

      <input type="hidden" name="id" value="{{category._id }}">
    </form>
  </div>

  













  <script>
    function previewImage(event) {
      const preview = document.querySelector('.image-preview');
      preview.innerHTML = '';
      const file = event.target.files[0];
      const reader = new FileReader();
      reader.onload = function (event) {
        const img = new Image();
        img.src = event.target.result;
        img.style.width = '100%';
        img.style.height = '100%';
        preview.appendChild(img);
      };
      reader.readAsDataURL(file);
    }
  </script>
</body>

</html>  


